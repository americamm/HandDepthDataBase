        <Image Height="274" HorizontalAlignment="Left" Margin="50,80,0,0" Name="displayDepth" Stretch="Fill" VerticalAlignment="Top" Width="404" />
        <CheckBox Content="Mover ángulo del kinect" Height="19" HorizontalAlignment="Right" Margin="0,380,12,0" Name="moverKinect" VerticalAlignment="Top" Width="167" />
        <Slider Height="336" HorizontalAlignment="Left" IsEnabled="False" Margin="567,18,0,0" Maximum="27" Minimum="-27" Name="anguloSlider" Orientation="Vertical" SmallChange="1" TickPlacement="Both" VerticalAlignment="Top" Width="55" />
    </Grid>
</Window>
